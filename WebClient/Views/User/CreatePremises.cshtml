@{
    ViewData["Title"] = "Đăng ký cơ sở mới";
}

    <head>
        <!-- BEGIN VENDOR CSS-->
        <link rel="stylesheet" type="text/css" href="~/app-assets/css/vendors.css">
        <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">
        <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/extensions/toastr.css">
        <!-- END VENDOR CSS-->
    </head>

<section id="horizontal-form-layouts">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="horz-layout-basic">TFS</h4>
                    <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                </div>
                <div class="card-content collpase show">
                    <div class="card-body">
                        <form class="form form-horizontal">
                            <div class="form-body">
                                <h4 class="form-section"><i class="ft-user"></i>Thông tin người dùng</h4>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Tài khoản</label>
                                    <div class="col-md-9">
                                        <input type="text" id="txtUsername" class="form-control" placeholder="tài khoản">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput2">Họ và Tên</label>
                                    <div class="col-md-9">
                                        <input type="text" id="txtFullname" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput3">E-mail</label>
                                    <div class="col-md-9">
                                        <input type="text" id="txtEmail" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput4">Số điện thoại</label>
                                    <div class="col-md-9">
                                        <input type="text" id="txtPhone" class="form-control" placeholder="090xxxxxxx">
                                    </div>
                                </div>
                                <h4 class="form-section"><i class="ft-clipboard"></i>Thông tin cơ sở</h4>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput5">Tên cơ sở</label>
                                    <div class="col-md-9">
                                        <input type="text" id="txtPremisesName" class="form-control" placeholder="VD: Vina milk">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput5">Địa chỉ cơ sở</label>
                                    <div class="col-md-9">
                                        <input type="text" id="txtPremisesAddress" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="dllPremisesType">Loại cơ sở</label>
                                    <div class="col-md-9">
                                        <select id="dllPremisesType" class="form-control">
                                            <option value="0" selected="" disabled="">Vui lòng chọn</option>
                                            <option value="1">Farm</option>
                                            <option value="2">Provider</option>
                                            <option value="3">Distributor</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button id="createNewRegisterInfoBtn" type="button" class="btn btn-primary">
                                    <i class="fa fa-check-square-o"></i> Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


@section Scripts{
    <!-- BEGIN PAGE VENDOR JS-->
    <script type="text/javascript" src="~/app-assets/vendors/js/ui/jquery.sticky.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL JS-->
    <script src="~/app-assets/js/scripts/tables/datatables/datatable-basic.js"
            type="text/javascript"></script>
    <!-- END PAGE LEVEL JS-->
    <script src="~/js/admin/PremisesManagement.js" type="text/javascript"></script>
    <script src="~/app-assets/vendors/js/extensions/toastr.min.js" type="text/javascript"></script>

}