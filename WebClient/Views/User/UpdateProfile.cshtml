@{
    ViewData["Title"] = "Cập nhật thông tin";
}
<head>
    <!-- BEGIN VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/vendors.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/extensions/toastr.css">
    <!-- END VENDOR CSS-->
</head>

<section id="horizontal-form-layouts">
    <div class="row" id="updateInfo">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="horz-layout-basic">Cập nhật thông tin người dùng</h4>
                    <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                </div>
                <div class="card-content collpase show">
                    <div class="card-body">
                        <form class="form form-horizontal">
                            <div class="form-body">
                                <h4 class="form-section"><i class="ft-user"></i> Thông tin người dùng</h4>
                                <div class="form-group row">
                                    <div class="col-md-9">
                                        <input type="hidden" id="userId" class="form-control" name="userId" value="16">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput2">Họ Và Tên</label>
                                    <div class="col-md-9">
                                        <label id="FullName" name="FullName">thái huỳnh</label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput3">E-mail</label>
                                    <div class="col-md-9">
                                        <label id="Email" name="Email">thaihuynhdinh@gmail.com</label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput4">Số Điện Thoại</label>
                                    <div class="col-md-9">
                                        <label id="Phone"  name="Phone">0909999999</label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput4">Hình ảnh</label>
                                    <div class="col-md-9 custom-file">
                                        <input type="file" onchange="readURL(this);" class="form-control-file" id="exampleInputFile">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput4"></label>
                                    <div class="col-md-9 ">
                                        <img id="avatar" src="#" alt="" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput4">Vai Trò</label>
                                    <div class="col-md-9">
                                        <label id="txtPremises" name="txtPremises">(Đây là vai trò)</label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput4">Cơ sở</label>
                                    <div class="col-md-9">
                                        <label id="txtPremises" name="txtPremises">(Đây là Premises)</label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput4">Mật Khẩu</label>
                                    <div class="col-md-9">
                                        <span class="btn btn-primary btn-sm mr-1 mb-1 ladda-button" data-toggle="modal" data-target="#changePass"><b>Đổi Mật khẩu</b></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button data-toggle="modal" data-target="#confirm" type="button" class="btn btn-primary">
                                    <i class="fa fa-check-square-o"></i> Thay đổi thông tin người dùng
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal Confirm -->
<div class="modal fade text-left" id="confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="statusLabel1">Cập nhật thông tin người dùng</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-md-3 label-control" for="projectinput2">Họ Và Tên</label>
                    <div class="col-md-9">
                        <input type="text" id="txtFullName" class="form-control" >
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 label-control" for="projectinput3">E-mail</label>
                    <div class="col-md-9">
                        <input type="text" id="txtEmail" class="form-control" >
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 label-control" for="projectinput4">Số Điện Thoại</label>
                    <div class="col-md-9">
                        <input type="text" id="txtPhone" class="form-control" >
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="confirmSaveButton" type="button" class="btn btn-outline-primary">Xác nhận</button>
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal ChangePass -->
<div class="modal fade text-left" id="changePass" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="statusLabel1">Đổi mật khẩu</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <!--id người dùng-->
                                    <input type="hidden" id="txtUserIdPass" class="form-control" readonly value="16" name="txtUserIdPass">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group" id="RoleOption">
                                    <label for="projectinput1">Mật khẩu cũ</label>
                                    <input type="password" id="txtOldPass" class="form-control" name="txtOldPass">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group" id="RoleOption">
                                    <label for="projectinput1">Mật khẩu mới</label>
                                    <input type="password" id="txtNewPass" class="form-control" name="txtNewPass">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group" id="RoleOption">
                                    <label for="projectinput1">Xác nhận Mật khẩu mới</label>
                                    <input type="password" id="txtConfirmNewPass" class="form-control" name="txtConfirmNewPass">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="changePassButton" type="button" class="btn btn-outline-primary">Xác nhận</button>
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <!-- BEGIN PAGE VENDOR JS-->
    <script type="text/javascript" src="~/app-assets/vendors/js/ui/jquery.sticky.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL JS-->
    <script src="~/app-assets/js/scripts/tables/datatables/datatable-basic.js"
            type="text/javascript"></script>
    <!-- END PAGE LEVEL JS-->
    <script src="~/js/admin/UserManagement.js" type="text/javascript"></script>
    <script src="~/app-assets/vendors/js/extensions/toastr.min.js" type="text/javascript"></script>

}