                                                <div class="row">
                                                    <div class="col-12 col-sm-6 col-md-6">
                                                        <fieldset class="form-group position-relative has-icon-left">
                                                            <input type="text" name="txtUsername" id="txtUsername" class="form-control input-lg" placeholder="Tài khoản" tabindex="1">
