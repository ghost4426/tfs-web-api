                                                            <div class="form-control-position">
                                                                <i class="fa fa-phone"></i>
                                                            </div>
                                                        </fieldset>
                                                    </div>
                                                </div>
                                                <h5 class="form-section"><i class="ft-user"></i>Thông tin cơ sở</h5>
                                                <div class="row">
                                                    <div class="col-12 col-sm-6 col-md-6">
                                                        <fieldset class="form-group position-relative has-icon-left">
                                                            <input type="text" name="txtPremisesName" id="txtPremisesName" class="form-control input-lg" placeholder="Tên cơ sở" tabindex="5" required="">
