@using System.Security.Claims;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@{
    ViewData["Title"] = "Home Page";
    var roles = HttpContextAccessor.HttpContext.User.Claims.Where(c => c.Type == ClaimTypes.Role).ToList();

}

<head>
    <!-- BEGIN CUSTOME CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/home/dashboard.css">
    <!-- END CUSTOME CSS-->
</head>
<div class="content-wrapper">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">Trang Chủ</h3>
        </div>
    </div>
    <div class="content-body">
        <section>
            @foreach (var role in roles)
            {
                if (role.Value == "Admin")
                {
                    <div class="row">
                        <div class="col-md-4 col-sm-6">
                            <div class="wrimagecard wrimagecard-topimage">
                                <a href="#">
                                    <div class="wrimagecard-topimage_header" style="background-color:rgba(36, 82, 187, 0.78)">
                                        <center><i class="icon-user text-white font-large-3" style="color:#0094ff"></i></center>
                                    </div>
                                    <div class="wrimagecard-topimage_title">
                                        <h3>
                                            Quản lí tài khoản
                                        </h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else if (role.Value == "Farm")
                {<div class="row">
                        <div class="col-md-4 col-sm-6">
                            <div class="wrimagecard wrimagecard-topimage">
                                <a href="#">
                                    <div class="wrimagecard-topimage_header" style="background-color:rgba(36, 82, 187, 0.78)">
                                        <center><i class="icon-user text-white font-large-3" style="color:#0094ff"></i></center>
                                    </div>
                                    <div class="wrimagecard-topimage_title">
                                        <h3>
                                            Quản lí tài khoản
                                        </h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="wrimagecard wrimagecard-topimage">
                                <a asp-controller="Farm" asp-action="FoodManagement">
                                    <div class="wrimagecard-topimage_header" style="background-color:rgba(65, 187, 36, 0.78)">
                                        <center><i class="icon-grid text-white font-large-3" style="color:#0094ff"></i></center>
                                    </div>
                                    <div class="wrimagecard-topimage_title">
                                        <h3>
                                            Quản lí thực phẩm
                                        </h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="wrimagecard wrimagecard-topimage">
                                <a asp-controller="Farm" asp-action="FarmTransaction">
                                    <div class="wrimagecard-topimage_header" style="background-color:rgba(187, 36, 36, 0.78)">
                                        <center><i class="icon-note text-white font-large-3" style="color:#0094ff"></i></center>
                                    </div>
                                    <div class="wrimagecard-topimage_title">
                                        <h3>
                                            Quản lí giao dịch
                                        </h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else if (role.Value == "Provider")
                {
                    <div class="row">
                        <div class="col-md-4 col-sm-6">
                            <div class="wrimagecard wrimagecard-topimage">
                                <a href="#">
                                    <div class="wrimagecard-topimage_header" style="background-color:rgba(36, 82, 187, 0.78)">
                                        <center><i class="icon-user text-white font-large-3" style="color:#0094ff"></i></center>
                                    </div>
                                    <div class="wrimagecard-topimage_title">
                                        <h3>
                                            Quản lí tài khoản
                                        </h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="wrimagecard wrimagecard-topimage">
                                <a asp-controller="Provider" asp-action="FoodManagement">
                                    <div class="wrimagecard-topimage_header" style="background-color:rgba(65, 187, 36, 0.78)">
                                        <center><i class="icon-grid text-white font-large-3" style="color:#0094ff"></i></center>
                                    </div>
                                    <div class="wrimagecard-topimage_title">
                                        <h3>
                                            Quản lí thực phẩm
                                        </h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="wrimagecard wrimagecard-topimage">
                                <a asp-controller="Provider" asp-action="ProviderTransaction">
                                    <div class="wrimagecard-topimage_header" style="background-color:rgba(187, 36, 36, 0.78)">
                                        <center><i class="icon-note text-white font-large-3" style="color:#0094ff"></i></center>
                                    </div>
                                    <div class="wrimagecard-topimage_title">
                                        <h3>
                                            Quản lí giao dịch
                                        </h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }

        </section>
    </div>
</div>
