        <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/extensions/toastr.css">
        <link rel="stylesheet" type="text/css" href="~/js/printJs/print.min.css">
        <!-- END VENDOR CSS-->
    </head>
<!-- Excel - Cell background table -->
<section id="file-export">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <h1 class="card-text" style="text-align:center;">
                            Quản lý giao dịch
                        </h1>
                        <br />
                        <table id="transaction-mng" class="table table-striped table-bordered file-export">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên thực phẩm</th>
                                    <th>Giống</th>
                                    <th>Nông trại</th>
                                    <th>Nhà phân phối</th>
                                    <th>Ngày tạo</th>
                                    <th></th>
                                    <th></th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--BEGIN QR -->
<div class="modal fade text-left" id="GetQRCode" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <section class="form-elegant scrollbar-light-blue">
                <div class="card" style="width: 100%; height: 100%; margin-bottom:0 !important;">
                    <div class="card-body mx-4">
                        <form method="post" action="#" id="printJs-form">
                            <svg id="barcode"></svg>
                        </form>
                        <div class="text-center">
                            <button id="btnPrintBarcode" type="button" class="btn btn-success btn-block btn-rounded z-depth-1" onclick="printJS('printJs-form', 'html')">Print</button>
                            <button type="button" class="btn btn-success btn-block btn-rounded z-depth-1" data-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

