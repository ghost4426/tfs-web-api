<!--BEGIN QR -->
<div class="modal fade text-left" id="GetQRCode" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <section class="form-elegant scrollbar-light-blue">
                <div class="card" style="width: 100%; height: 100%; margin-bottom:0 !important;">
                    <div class="card-body mx-4">
                        <h4 class="form-section"><i class="ft-info"></i> Thông Tin Thực Phẩm</h4>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Mã</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="foodId-trans" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Loại</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="category-trans" readonly />
                            </div>
                        </div>
