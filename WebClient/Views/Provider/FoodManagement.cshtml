                            <label class="col-md-2 label-control" for="txtFoodId">Giống</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="breed-trans" readonly />
                            </div>
                        </div>
                        <form id="printJs-form" role="form">
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="col-md-12" for="projectinput2">Chọn nhà phân phối</label>
                                    <select name="Treatment" class="select2-placeholder select2-size-lg form-control" style="width:100%" id="ddlDistributor" required></select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="col-md-12 label-control" for="txtCerNum">Mã số kiểm dịch</label>
                                    <input class="col-md-12 form-control" type="text" id="cerNum" name="CerNum" />
                                </div>
                            </div>
                            <div id="check-trans"></div>
                            <input type="hidden" id="check-treatment" readonly />
                            <input type="hidden" id="check-packaging" readonly />
                            <canvas id="barcode" hidden></canvas>
                            <div class="row justify-content-md-center" hidden>
                                <button type="button" class="btn btn-secondary col-4" onclick="printJS('barcode', 'html')">In mã barcode</button>
                                <div class="col-2"></div>
                                <a id="btnPrintBarcode" href="" onclick="download_img(this)" class="btn btn-info col-4">Tải mã barcode</a>
                            </div>
                            <div class="row justify-content-md-center mt-2">
                                <button type="submit" id="btn-transaction" class="btn btn-success col-4">Tạo giao dịch</button>
                                <div class="col-2"></div>
                                <button class="btn btn-danger col-4" data-dismiss="modal">Đóng</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
