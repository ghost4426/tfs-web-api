@{
    ViewData["Title"] = "Nhà cung cấp";
}
    <head>
        <!-- BEGIN VENDOR CSS-->
        <link rel="stylesheet" type="text/css" href="~/app-assets/css/vendors.css">
        <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">
        <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/extensions/buttons.dataTables.min.css">
        <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/buttons.bootstrap4.min.css">
        <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/forms/selects/select2.min.css">
        <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/extensions/toastr.css">
        <link rel="stylesheet" type="text/css" href="~/js/printJs/print.min.css">
        <!-- END VENDOR CSS-->
    </head>
<!-- Excel - Cell background table -->
<section id="file-export">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <h1 class="card-text" style="text-align:center;">
                            Quản lý thực phẩm cung cấp
                        </h1>
                        <br />
                        <table id="provider-food-mng" class="table table-striped table-bordered file-export">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên thực phẩm</th>
                                    <th>Giống</th>
                                    <th>Ngày nhập</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Modal add new food info -->
<div class="modal fade text-left" id="addinfo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">Thêm mới thông tin thực phẩm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form form-horizontal" novalidate id="formAddDetail">
                    <div class="form-body">
                        <h4 class="form-section"><i class="ft-info"></i> Thông Tin Thực Phẩm</h4>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Mã</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtFoodId" id="txtFoodId" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Loại</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtFoodCategory" id="txtFoodCategory" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Giống</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtFoodBreed" id="txtFoodBreed" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Thông Tin</label>
                            <div class="col-md-10">
                                <select class="select2" name="dllFoodDetailType" style="width: 100%" id="dllFoodDetailType"></select>
                            </div>
                        </div>
                        <div id="detailTitle">
                        </div>
                        <div class="row form-group" id="add-detail-form">

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-outline-primary" id="addDetailConfirm">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
<!-- End modal add new food info -->
<!-- Modal view food info -->
<div class="modal fade text-left" id="getinfo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">Thông tin thực phẩm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form form-horizontal" novalidate id="formAddDetail">
                    <div class="form-body">
                        <h4 class="form-section"><i class="ft-info"></i> Thông Tin Thực Phẩm</h4>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Mã</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtFoodId" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Loại</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtFoodCategory" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Giống</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtFoodBreed" readonly />
                            </div>
                        </div>
                        <h4 class="form-section"><i class="ft-info"></i> Quy Trình Xử Lý</h4>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Tên quy trình</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="" id="TreatmentName" readonly />
                            </div>
                        </div>
                        <div id="TreatmentProcess">
                        </div>
                        </div>
                        <h4 class="form-section"><i class="ft-info"></i> Thông Tin Đóng Gói</h4>
                        <div class="row form-group">
                            <label class="col-md-2 label-control">Ngày sản xuất</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtNSX" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control">Hạn sử dụng</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtHSD" readonly />
                            </div>
                        </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<!-- End view food info -->
<!--BEGIN QR -->
<div class="modal fade text-left" id="GetQRCode" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <section class="form-elegant scrollbar-light-blue">
                <div class="card" style="width: 100%; height: 100%; margin-bottom:0 !important;">
                    <div class="card-body mx-4">
                        <form method="post" action="#" id="printJs-form">
                            <canvas id="barcode"></canvas>
                        </form>
                        <div class="row justify-content-md-center">
                            <button type="button" class="btn btn-secondary col-4" onclick="printJS('printJs-form', 'html')">In mã barcode</button>
                            <div class="col-2"></div>
                            <a id="btnPrintBarcode" href="" onclick="download_img(this)" class="btn btn-info col-4">Tải mã barcode</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
