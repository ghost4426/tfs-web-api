
@{
    ViewData["Title"] = "Quản Lý Tài Khoản";
}

<head>
    <!-- BEGIN VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/vendors.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">
    <!-- END VENDOR CSS-->
</head>
<!-- Excel - Cell background table -->
<section id="cell-background">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <h1 class="card-text" style="text-align:center;">
                            Quản lý tài khoản
                        </h1>
                        <br />
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tài Khoản</th>
                                    <th>Họ và Tên</th>
                                    <th>Vai trò</th>
                                    <th width="10%">Số Điện Thoại</th>
                                    <th>Email</th>
                                    <th>Trạng thái</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < 25; i++)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>UserName @i</td>
                                        <td>ahihi</td>
                                        <td>Admin</td>
                                        <td>0909 @i@i@i@i@i@i</td>
                                        <td>uername.@i@@gmail.com</td>
                                        <td>Active</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                                <button type="button" class="btn btn-secondary"><i class="fa fa-times-circle"></i> Vô hiệu hóa</button>
                                                <button type="button" class="btn btn-secondary"><i class="fa fa-wrench"></i> Đổi Vai trò</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <!-- BEGIN PAGE VENDOR JS-->
    <script type="text/javascript" src="~/app-assets/vendors/js/ui/jquery.sticky.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL JS-->
    <script src="~/app-assets/js/scripts/tables/datatables/datatable-basic.js"
            type="text/javascript"></script>
}

