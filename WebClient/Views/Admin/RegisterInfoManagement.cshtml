
@{
    ViewData["Title"] = "Quản Lý Cơ Sở";
}

<head>
    <!-- BEGIN VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/vendors.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/extensions/toastr.css">
    <!-- END VENDOR CSS-->
</head>
<!-- Excel - Cell background table -->
<section id="cell-background">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <h1 class="card-text" style="text-align:center;">
                            Quản lý thông tin đăng ký cơ sở
                        </h1>
                        <br />
                        <table id="registerInfoTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <!--<th>Số</th>-->
                                    <th>Tên cơ sở</th>
                                    <th>Địa chỉ cơ sở</th>
                                    <th>Loại</th>
                                    <th>Tài khoản</th>
                                    <th>Họ và Tên</th>
                                    <th>Email</th>
                                    <th>Số Điện Thoại</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Modal Change Role -->
<div class="modal fade text-left" id="changeStatus" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">Cập nhật trạng thái hồ sơ</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="projectinput1">Số thông tin</label>
                                    <input id="txtRegId" class="form-control" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group" id="RoleOption">
                                    <label for="projectinput1">Trạng thái</label>
                                    <select id="dllStatus" class="select2 form-control block select2-hidden-accessible" style="width: 50%" tabindex="-1" aria-hidden="true"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="updateRegisterInfoButton" type="button" class="btn btn-outline-primary">Xác nhận</button>
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- BEGIN PAGE VENDOR JS-->
    <script type="text/javascript" src="~/app-assets/vendors/js/ui/jquery.sticky.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL JS-->
    <script src="~/app-assets/js/scripts/tables/datatables/datatable-basic.js"
            type="text/javascript"></script>
    <!-- END PAGE LEVEL JS-->
    <script src="~/js/admin/PremisesManagement.js" type="text/javascript"></script>
    <script src="~/app-assets/vendors/js/extensions/toastr.min.js" type="text/javascript"></script>

}