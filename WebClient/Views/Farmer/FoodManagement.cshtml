@{
    ViewData["Title"] = "Nông trại";
}
<head>
    <!-- BEGIN VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/vendors.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/extensions/buttons.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/buttons.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/forms/selects/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/extensions/toastr.css">
    <!-- END VENDOR CSS-->
</head>
<!-- Excel - Cell background table -->
<section>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <h1 class="card-text" style="text-align:center;">
                            Quản Lý Thực Phẩm
                        </h1>
                        <table id="farm-food-mng" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên thực phẩm</th>
                                    <th>Giống</th>
                                    <th>Ngày tạo</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal add new food -->
<div class="modal fade text-left" id="default" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">Thêm mới thực phẩm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="projectinput3">Loại</label>
                                    <select class="form-control" name="NewCategory" id="NewCategory"></select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="projectinput3">Giống</label>
                                    <input type="text" id="Breed" class="form-control" placeholder="Giống"
                                           required name="Breed">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-outline-primary" id="btnAddProduct">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
<!-- End modal add new food -->
<!-- Modal add new food info -->
<div class="modal fade text-left" id="add-food-data" role="dialog" aria-labelledby="add-food-data" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addDetailDataTitle">Thêm thông tin thực phẩm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form form-horizontal" novalidate id="formAddDetail">
                    <div class="form-body">
                        <h4 class="form-section"><i class="ft-info"></i> Thông Tin Thực Phẩm</h4>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Mã</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtFoodId" id="txtFoodId" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Loại</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtFoodCategory" id="txtFoodCategory" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Giống</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="txtFoodBreed" id="txtFoodBreed" readonly />
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-2 label-control" for="txtFoodId">Thông Tin</label>
                            <div class="col-md-10">
                                <select class="select2" name="dllFoodDetailType" style="width: 100%" id="dllFoodDetailType"></select>
                            </div>
                        </div>
                        <div id="detailTitle">
                        </div>
                        <div class="row form-group" id="add-detail-form">

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" id="btnAddDetail" class="btn btn-outline-primary">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<!-- End modal add new food info -->
<!-- Modal view food info -->
<div class="modal fade text-left" id="getinfo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">Thông tin thực phẩm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="projectinput1">Tên</label>
                                    <input type="text" id="Name" class="form-control" name="Name">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="projectinput1">Nội dung</label>
                                    <textarea id="Info" class="form-control" placeholder="Ví dụ: Bón phân hữu cơ,..."
                                              name="Info" rows="10"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<!-- End view food info -->
<!-- Modal addProvider-->
<div class="modal fade text-left" id="addDistributor" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">Chuyển cho nhà cung cấp</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form">
                    <div class="form-body">                        
                        <div class="row">
                            <div class="col-md-12">
                                <label for="projectinput2">Mã</label>
                                <input id="pro-food-id" class="form-control" type="text" name="foodId" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label for="projectinput2">Nhà cung cấp</label>
                                <select name="providerID" class="select2-placeholder select2-size-lg form-control" style="width:100%" id="ddlProvider"></select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Đóng</button>
                <button id="btn-addProvider" type="button" class="btn btn-outline-primary">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
<!-- End addDistributor-->
